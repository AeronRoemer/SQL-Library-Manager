extends layout.pug

block content
  section#content
  h1 Update Book
  include errors
  form(action="/update_book/" + book.id , method="post")
    p
      label(for="title") Title
      input(id="title" name="title" type="text" value=book.title)
    p
      label(for="author") Author
      input(id="author" name="author" type="text" value=book.author)
    p
      label(for="genre") Genre
      input(id="genre" name="genre" type="text" value=book.genre)
    p
      label(for="year") Year
      input(id="year" name="year" type="text" value=book.year)
    p
      input(type="submit" value='Update Book')
    p
      a(class="button" href="/") Cancel
  form(action="/update_book/" + book.id + "/delete",  method="post" onsubmit="return confirm('Do you really want to delete this book?')")
    input(type="submit" value="Delete Book")