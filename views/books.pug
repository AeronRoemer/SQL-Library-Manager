extends layout.pug

block content
  section#content
    h1 Book
    p
      a(class="button" href="/new_book") Create New Book
  table
    tr
      th Title
      th Author
      th Genre
      th Year
    each book in books
      tr
        td
          a(href= "/books/" + book.id)=book.title
        td= book.author
        td= book.genre
        td= book.year